<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.learning.photoshow">

    <application
        android:name=".shell.app.PhotoShowApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhotoShow"
        tools:ignore="AllowBackup">
        <activity
            android:name="com.learning.photoshow.shell.ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".shell.ui.main.MainActivity" />
        <activity android:name=".shell.ui.photos.listing.ListingPhotosActivity" />
        <activity android:name=".shell.ui.photos.preview.ViewingPhotoActivity" />
    </application>

</manifest>